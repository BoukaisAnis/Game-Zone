            window.addEventListener('scroll', () => {
                if (window.scrollY > 500) {
                    backToTopBtn.classList.add('visible');
                } else {
                    backToTopBtn.classList.remove('visible');
                }
            });

            backToTopBtn.addEventListener('click', () => {
                window.scrollTo({
                    top: 0,
                    behavior: 'smooth'
                });
            });

            // Newsletter form handling
            window.handleNewsletter = function(event) {
                event.preventDefault();
                const form = event.target;
                const input = form.querySelector('.newsletter-input');
                const email = input.value;

                // Simulate API call
                const submitBtn = form.querySelector('.newsletter-btn');
                const originalText = submitBtn.innerHTML;
                
                submitBtn.innerHTML = '<span class="loading-spinner"></span> Subscribing...';
                submitBtn.disabled = true;

                setTimeout(() => {
                    // Show success message
                    if (window.showNotification) {
                        showNotification('🎉 Welcome to the GameZone community!', 'success', 'You\'ll receive gaming updates soon.');
                    }
                    
                    // Reset form
                    form.reset();
                    submitBtn.innerHTML = originalText;
                    submitBtn.disabled = false;
                }, 2000);
            };

            // Add animation to footer sections
            const footerSections = document.querySelectorAll('.footer-main, .footer-newsletter, .footer-bottom');
            footerSections.forEach((section, index) => {
                section.classList.add('footer-section');
                section.style.animationDelay = `${index * 0.1}s`;
            });

            // Social links interaction
            document.querySelectorAll('.social-link').forEach(link => {
                link.addEventListener('click', (e) => {
                    e.preventDefault();
                    if (window.showNotification) {
                        showNotification('🔗 Social integration coming soon!', 'warning');
                    }
                });
            });

            // Language selector
            const languageSelect = document.querySelector('.language-select');
            if (languageSelect) {
                languageSelect.addEventListener('change', function() {
                    if (window.showNotification) {
                        showNotification('🌐 Language preference saved!', 'success');
                    }
                });
            }

            // Payment methods hover effect
            document.querySelectorAll('.payment-icon').forEach(icon => {
                icon.addEventListener('mouseenter', function() {
                    this.style.transform = 'scale(1.2)';
                });
                
                icon.addEventListener('mouseleave', function() {
                    this.style.transform = 'scale(1)';
                });
            });
        });

        // Add loading spinner styles
        const spinnerStyle = document.createElement('style');
        spinnerStyle.textContent = `
            .loading-spinner {
                width: 16px;
                height: 16px;
                border: 2px solid transparent;
                border-top: 2px solid currentColor;
                border-radius: 50%;
                animation: spin 1s linear infinite;
                display: inline-block;
                margin-right: 0.5rem;
            }
        `;
